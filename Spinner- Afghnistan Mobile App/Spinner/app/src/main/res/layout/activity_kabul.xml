<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kabul">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabul"
        android:textSize="32dp"
            android:textStyle="bold"

        android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="     Kabul is one of the beautiful cities in Afghanistan
and it is also the Capital and business city of the country."
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/kabulmap">
        </ImageView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:text="Tradition"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Kabul is a very diverse city. So it includes different cultures and
traditions. You will be able to find variety of delecious foods and beautiful clothes "
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32dp"
            android:text="Estimated Population"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="4,4 Million (2020)"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:text="Famous Places"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Paghman , Qargha, Shkardara"
            />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:rowCount="4"
            android:rowOrderPreserved="true"
            android:columnCount="1"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/kabul1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="100px">

            </ImageView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/kabul3"


                android:layout_marginBottom="100px">
            </ImageView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/kabul4"
                android:layout_marginBottom="100px">
            </ImageView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/kabul5"
                android:layout_marginBottom="100px">
            </ImageView>




        </GridLayout>

</LinearLayout>



</ScrollView>





</LinearLayout>

